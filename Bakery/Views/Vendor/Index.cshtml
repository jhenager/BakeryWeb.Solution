@using Bakery.Models;

<h1>Vendors:</h1>

@if (@Model.Count == 0)
{
  <h3>There are currently no vendors to list.</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/venders/@vendor.Id'>@vendor.VendorName</a></h3>
  
}

<p><a href='/vendors/new'>Add a Vendor</a></p>
<p><a href='/'>Back home</a></p>